        android:layout_height="wrap_content"
        android:id="@+id/lv_news"
        android:background="@color/colorWhite"
        android:divider="@color/colorGray"
        android:dividerHeight="1px"
        />
    </in.srain.cube.views.ptr.PtrFrameLayout>
