<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="48dip"
    android:orientation="horizontal"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="53dp"
    android:id="@+id/lllogo">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:padding="0dip"
        android:maxWidth="46dip"
        android:minHeight="46dip"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/app_name"
        android:fontFamily="sans-serif-condense"
        android:textSize="34dip"
        android:textColor="@color/colorBuleBig"
        android:id="@+id/tvTitle"
        android:paddingTop="2dip"
        />
</LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="' 专属你的办公移动APP '"
        android:textColor="@color/colorBuleSmall"
        android:textSize="17dip"
        android:id="@+id/tvContent"
        android:layout_marginBottom="33dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Copyright @2016 diandi.com All Rights Reserved"
        android:id="@+id/tvState"
        android:textSize="12dip"
        android:textColor="@color/colorBuleSmallx"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>