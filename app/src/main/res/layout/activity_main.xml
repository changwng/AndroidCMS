<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    android:clipToPadding="false"
    android:background="@android:color/white">
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"

    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fl_main">
        <include android:id="@+id/home_layout" layout="@layout/home_layout" />
    </FrameLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/colorSplit"
        android:layout_above="@+id/tb_bottom"
        android:layout_marginBottom="10dip"
        />
    <TableLayout
        android:id="@+id/tb_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:stretchColumns="0,1,2"

        >
        <TableRow
            android:layout_height="fill_parent">
        <TableRow
            android:layout_height="40dip"
            android:onClick="home_click">
            <RelativeLayout
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icons_home"
                    android:textColor="@color/colorIconsFocus"
                    android:id="@+id/tv_home"
                    android:layout_centerHorizontal="true"
                    android:textSize="20dip"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorIconsFocus2"
                    android:textSize="11dip"
                    android:text="首页"
                    android:layout_below="@id/tv_home"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/tv_home2"/>
            </RelativeLayout>

            </TableRow>
            <TableRow android:layout_height="40dip"
                android:onClick="pacman_click">
                <RelativeLayout
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icons_pacman"
                    android:textColor="@color/colorIconsBlur"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/tv_pacman"
                    android:textSize="20dip"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorIconsBlur2"
                        android:textSize="11dip"
                        android:text="发现"
                        android:layout_below="@id/tv_pacman"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/tv_pacman2"/>
                </RelativeLayout>
            </TableRow>
            <TableRow android:layout_height="40dip"
                android:onClick="user_click">
                <RelativeLayout
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icons_user"
                    android:textColor="@color/colorIconsBlur"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/tv_user"
                    android:textSize="20dip"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorIconsBlur2"
                        android:textSize="11dip"
                        android:text="我"
                        android:layout_below="@id/tv_user"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/tv_user2"/>
                </RelativeLayout>
            </TableRow>
        </TableRow>
    </TableLayout>
</RelativeLayout>
    <!-- The navigation view -->
    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="fill_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:id="@+id/ll_leftContainer">
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="190sp"
            android:src="@drawable/background_drawer_header"
            android:scaleType="fitXY"
            />

        <ListView
            android:id="@+id/left_drawer"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:choiceMode="singleChoice"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp" >
        </ListView>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>
